# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database - Use separate test database
DATABASE_URL=postgresql://postgres:password@localhost:5432/claude_api_test
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/claude_api_test

# Test Redis - Will be overridden by redis-memory-server
REDIS_URL=redis://localhost:6380

# JWT Configuration for testing
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# Worker Configuration for testing
MAX_WORKERS=2
WORKER_TIMEOUT=5000
CLAUDE_CLI_PATH=echo

# Rate Limiting for testing
DEFAULT_RATE_LIMIT_PER_HOUR=100
BURST_RATE_LIMIT=5

# Logging
LOG_LEVEL=error

# Session Configuration
DEFAULT_SESSION_TTL=300
MAX_SESSION_TTL=3600