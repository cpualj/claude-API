# Claude Multi-Account Docker 环境变量配置
# 复制此文件为 .env 并填入实际值

# 数据库配置
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=claude_api

# JWT 密钥 (请生成一个强密钥)
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately

# 管理员账号
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password

# Claude CLI 多账号配置 (使用 Claude Pro $200 订阅)
# 每个账号会在独立的 Docker 容器中运行
# Account 1 (必需)
CLAUDE_EMAIL_1=your-email-1@example.com
CLAUDE_PASSWORD_1=your-password-1

# Account 2 (必需)
CLAUDE_EMAIL_2=your-email-2@example.com  
CLAUDE_PASSWORD_2=your-password-2

# Account 3 (可选，使用 --profile multi-account 启用)
CLAUDE_EMAIL_3=your-email-3@example.com
CLAUDE_PASSWORD_3=your-password-3

# Redis 配置
REDIS_PASSWORD=

# 前端 URL
FRONTEND_URL=http://localhost:3030

# Worker 配置
MAX_CONCURRENT=5
WORKER_AUTH_TOKEN=your-worker-auth-token

# 系统配置
NODE_ENV=production
LOG_LEVEL=info

# 邮件配置 (可选，用于通知)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# 监控配置 (可选)
SENTRY_DSN=
METRICS_ENABLED=false